{
    "name": "Uploader",
    "version": "1.1.0",
    "description": "An easy to use archive digitisation uploader.",
    "author": "Arkivvkerket",
    "private": true,
    "homepage": "./",
    "main": "public/electron.js",
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.22",
        "@fortawesome/free-solid-svg-icons": "^5.10.2",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "@tippy.js/react": "^2.2.3",
        "electron-updater": "^4.1.2",
        "electron-util": "^0.12.1",
        "electron-window-state": "^5.0.3",
        "filesize": "^4.1.2",
        "fs-extra": "^8.1.0",
        "md5": "^2.2.1",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-scripts": "^3.1.1",
        "tar": "^4.4.10",
        "tus-js-client": "^1.7.1"
    },
    "devDependencies": {
        "concurrently": "^4.1.2",
        "cross-env": "^5.2.1",
        "electron": "^6.0.8",
        "electron-builder": "^21.2.0",
        "electron-notarize": "^0.1.1",
        "node-sass": "^4.12.0",
        "typescript": "^3.6.3",
        "wait-on": "^3.3.0"
    },
    "scripts": {
        "react-start": "react-scripts start",
        "react-build": "react-scripts build",
        "react-test": "react-scripts test --env=jsdom",
        "react-eject": "react-scripts eject",
        "electron-build": "electron-builder",
        "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
        "build-mac": "yarn react-build && yarn electron-build -m",
        "build-mac-test": "yarn react-build && yarn electron-build -m -c.mac.identity=null",
        "build-win": "yarn react-build && yarn electron-build -w -c.win.certificateSubjectName=\"Arkivverket\"",
        "build-win-test": "yarn react-build && yarn electron-build -w"
    },
    "build": {
        "afterSign": "assemble/scripts/notarize.js",
        "appId": "no.arkivverket.digitalisering.uploader",
        "directories": {
            "buildResources": "assemble/resources"
        },
        "dmg": {
            "sign": false
        },
        "nsis": {
            "deleteAppDataOnUninstall": true
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "assemble/mac/entitlements.plist",
            "entitlementsInherit": "assemble/mac/entitlements.plist"
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "publish": [
            {
              "provider": "generic",
              "url": "http://ra-freost:8000/test/auto-update"
            }
          ]
    },
    "browserslist": [
        "electron 6.0"
    ]
}
