{
    "name": "Uploader",
    "version": "1.2.2",
    "description": "An easy to use archive digitisation uploader.",
    "author": "Arkivvkerket <utvikling@arkivverket.no>",
    "private": true,
    "homepage": "./",
    "main": "public/electron.js",
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.25",
        "@fortawesome/free-solid-svg-icons": "^5.11.2",
        "@fortawesome/react-fontawesome": "^0.1.7",
        "@tippy.js/react": "^3.1.0",
        "ajv": "^6.10.2",
        "electron-updater": "^4.1.2",
        "electron-util": "^0.12.2",
        "electron-window-state": "^5.0.3",
        "filesize": "^5.0.3",
        "fs-extra": "^8.1.0",
        "md5": "^2.2.1",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-scripts": "^3.2.0",
        "tar": "^5.0.5",
        "tus-js-client": "^1.8.0"
    },
    "devDependencies": {
        "concurrently": "^5.0.0",
        "cross-env": "^6.0.3",
        "electron": "^7.0.0",
        "electron-builder": "^22.1.0",
        "electron-notarize": "^0.1.1",
        "node-sass": "^4.13.0",
        "typescript": "^3.6.4",
        "wait-on": "^3.3.0"
    },
    "scripts": {
        "react-start": "react-scripts start",
        "react-build": "react-scripts build",
        "react-test": "react-scripts test --env=jsdom",
        "react-eject": "react-scripts eject",
        "electron-build": "electron-builder",
        "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
        "build-mac": "yarn react-build && yarn electron-build -m",
        "build-mac-test": "yarn react-build && yarn electron-build -m -c.mac.identity=null",
        "build-win": "yarn react-build && yarn electron-build -w -c.win.certificateSubjectName=\"Arkivverket\"",
        "build-win-test": "yarn react-build && yarn electron-build -w"
    },
    "build": {
        "afterSign": "assemble/scripts/notarize.js",
        "appId": "no.arkivverket.digitalisering.uploader",
        "directories": {
            "buildResources": "assemble/resources"
        },
        "dmg": {
            "sign": false
        },
        "nsis": {
            "deleteAppDataOnUninstall": true
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "assemble/mac/entitlements.plist",
            "entitlementsInherit": "assemble/mac/entitlements.plist"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "publish": [
            {
                "provider": "generic",
                "url": "https://uploader.digitalisering.arkivverket.no"
            }
        ]
    },
    "browserslist": [
        "electron 7.0"
    ]
}
