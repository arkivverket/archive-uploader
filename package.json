{
    "name": "Uploader",
    "version": "1.0.4",
    "description": "An easy to use archive digitisation uploader.",
    "author": "Arkivvkerket",
    "private": true,
    "homepage": "./",
    "main": "public/electron.js",
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.22",
        "@fortawesome/free-solid-svg-icons": "^5.10.2",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "@tippy.js/react": "^2.2.3",
        "electron-util": "^0.12.1",
        "electron-window-state": "^5.0.3",
        "filesize": "^4.1.2",
        "fs-extra": "^8.1.0",
        "md5": "^2.2.1",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-scripts": "^3.1.1",
        "tar": "^4.4.10",
        "tus-js-client": "^1.7.1"
    },
    "devDependencies": {
        "concurrently": "^4.1.2",
        "cross-env": "^5.2.0",
        "electron": "^6.0.5",
        "electron-builder": "^21.2.0",
        "node-sass": "^4.12.0",
        "typescript": "^3.6.2",
        "wait-on": "^3.3.0"
    },
    "scripts": {
        "react-start": "react-scripts start",
        "react-build": "react-scripts build",
        "react-test": "react-scripts test --env=jsdom",
        "react-eject": "react-scripts eject",
        "electron-build": "electron-builder",
        "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
        "build": "yarn react-build && yarn electron-build",
        "build-mac": "yarn react-build && yarn electron-build -m",
        "build-win": "yarn react-build && yarn electron-build -w"
    },
    "build": {
        "appId": "no.arkivverket.digitalisering",
        "directories": {
            "buildResources": "resources"
        },
        "mac": {
            "target": [
                "dmg"
            ]
        },
        "win": {
            "target": [
                "portable"
            ],
            "certificateSubjectName": "Arkivverket"
        }
    },
    "browserslist": [
        "electron 6.0"
    ]
}
